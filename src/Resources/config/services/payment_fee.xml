<?xml version="1.0" encoding="utf-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://www.symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="true" />

        <service id="sylius_mollie_plugin.payment_surcharge.calculator.fixed_amount"
                 class="Sylius\MolliePlugin\PaymentFee\Calculator\FixedAmountCalculator"
        >
            <argument type="service" id="sylius.factory.adjustment"/>
            <argument type="service" id="sylius_mollie_plugin.provider.divisor.divisor_provider"/>
            <tag name="sylius_mollie_plugin.payment_surcharge.calculator"/>
        </service>

        <service id="sylius_mollie_plugin.payment_surcharge.calculator.percentage"
                 class="Sylius\MolliePlugin\PaymentFee\Calculator\PercentageCalculator"
        >
            <argument type="service" id="sylius.factory.adjustment"/>
            <argument type="service" id="sylius_mollie_plugin.provider.divisor.divisor_provider"/>
            <tag name="sylius_mollie_plugin.payment_surcharge.calculator"/>
        </service>

        <service id="sylius_mollie_plugin.payment_surcharge.calculator.fixed_amount_and_percentage"
                 class="Sylius\MolliePlugin\PaymentFee\Calculator\FixedAmountAndPercentageCalculator"
        >
            <argument type="service" id="sylius.factory.adjustment"/>
            <argument type="service" id="sylius_mollie_plugin.payment_surcharge.calculator.percentage"/>
            <argument type="service" id="sylius_mollie_plugin.payment_surcharge.calculator.fixed_amount"/>
            <argument type="service" id="sylius_mollie_plugin.provider.divisor.divisor_provider"/>
            <tag name="sylius_mollie_plugin.payment_surcharge.calculator"/>
        </service>

        <service id="sylius_mollie_plugin.payment_surcharge.calculator.composite"
                 class="Sylius\MolliePlugin\PaymentFee\CompositePaymentSurchargeCalculator"
        >
            <argument type="tagged" tag="sylius_mollie_plugin.payment_surcharge.calculator"/>
        </service>
    </services>
</container>
