{% extends '@SyliusAdmin/layout.html.twig' %}

{% import '@SyliusUi/Macro/headers.html.twig' as headers %}
{% import '@SyliusUi/Macro/buttons.html.twig' as buttons %}

{% form_theme form '@SyliusAdmin/Form/theme.html.twig' %}

{% block content %}
    <h2 class="ui header">
        <i class="circular cart down icon"></i>
        <div class="content" id="mollie-payment-form">
            {{ 'sylius_mollie_plugin.ui.paymentlink_generate'|trans }}
            <div class="sub header">{{ 'sylius_mollie_plugin.ui.paymentlink_generate_subtitle'|trans }}</div>
        </div>
    </h2>
    <div class="ui segment" id="paymentlink">
        <h3 class="ui dividing header">{{ 'sylius_mollie_plugin.ui.paymentlink_generate'|trans }}</h3>
        {{ form_start(form, {'method': 'GET', 'attr': {'class': 'ui loadable form', 'novalidate': 'novalidate'}}) }}
        <div class="field">
            {{ form_row(form.methods) }}
        </div>
        <button class="ui button" type="submit">{{ 'sylius_mollie_plugin.ui.generate'|trans }}</button>
        {{ form_row(form._token) }}
        {{ form_end(form, {'render_rest': false}) }}
    </div>
{% endblock %}
