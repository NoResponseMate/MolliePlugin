    <imports>
        <import resource="services/**/*.xml" />
    </imports>
    <services>
        <defaults autowire="false" />
        <defaults autoconfigure="false" />

        <service id="sylius_mollie.mollie_payment" class="Sylius\MolliePlugin\Action\ApiPlatform\MolliePayment">
