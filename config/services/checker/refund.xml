            <argument type="service" id="sylius.repository.order"/>
            <argument type="service" id="Sylius\RefundPlugin\Filter\UnitRefundFilterInterface"/>
        </service>

        <service id="sylius_mollie.checker.refund.mollie_order_refund" class="Sylius\MolliePlugin\Refund\Checker\MollieOrderRefundChecker" />
    </services>
</container>
