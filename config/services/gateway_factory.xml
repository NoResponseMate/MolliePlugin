<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="true" />

        <service id="sylius_mollie.gateway_factory.mollie_gateway" class="Sylius\MolliePlugin\Payum\Factory\MollieGatewayFactory" />

        <service id="sylius_mollie.gateway_factory.mollie_subscription_gateway" class="Sylius\MolliePlugin\Payum\Factory\MollieSubscriptionGatewayFactory" />

        <service id="sylius_mollie.payum.gateway_factory.builder.mollie" class="Payum\Core\Bridge\Symfony\Builder\GatewayFactoryBuilder">
            <argument type="service" id="sylius_mollie.gateway_factory.mollie_gateway"/>
            <tag name="payum.gateway_factory_builder" factory="mollie"/>
        </service>

        <service id="sylius_mollie.payum.gateway_factory.builder.mollie_subscription" class="Payum\Core\Bridge\Symfony\Builder\GatewayFactoryBuilder">
            <argument type="service" id="sylius_mollie.gateway_factory.mollie_subscription_gateway"/>
            <tag name="payum.gateway_factory_builder" factory="mollie_subscription"/>
        </service>
    </services>
</container>
