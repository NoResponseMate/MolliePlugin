<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <service id="sylius_mollie.listener.workflow.apply_payment_surcharge" class="Sylius\MolliePlugin\EventListener\Workflow\ApplyPaymentSurchargeListener">
            <argument type="service" id="sylius_mollie.processor.payment_surcharge"/>
            <tag name="kernel.event_listener" event="workflow.sylius_order_checkout.transition.select_payment" />
        </service>

        <service id="sylius_mollie.listener.workflow.purify_ready_shipments" class="Sylius\MolliePlugin\EventListener\Workflow\PurifyReadyShipmentsListener">
            <argument type="service" id="sylius_mollie.partial_ship.purifier.order_shipment" />
            <tag name="kernel.event_listener" event="workflow.sylius_shipment.transition.create_and_ship" priority="100" />
            <tag name="kernel.event_listener" event="workflow.sylius_shipment.transition.ship" priority="100" />
        </service>

        <service id="sylius_mollie.listener.workflow.resolve_shipment_state" class="Sylius\MolliePlugin\EventListener\Workflow\ResolveShipmentStateListener">
            <argument type="service" id="sylius.state_resolver.order_shipping" />
            <tag name="kernel.event_listener" event="workflow.sylius_shipment.transition.create_and_ship.completed" priority="-10" />
            <tag name="kernel.event_listener" event="workflow.sylius_shipment.transition.ship.completed" priority="-10" />
        </service>
    </services>
</container>
