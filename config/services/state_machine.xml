<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <defaults public="true" />

        <service id="sylius_mollie.payum.action.state_machine.status_recurring_subscription" class="Sylius\MolliePlugin\Payum\Action\Subscription\StatusRecurringSubscriptionAction">
            <argument type="service" id="sylius_mollie.manager.mollie_subscription"/>
            <argument type="service" id="sylius_mollie.payum.action.state_machine.applicator.subscription_and_payment_id"/>
            <argument type="service" id="sylius_mollie.payum.action.state_machine.applicator.subscription_and_sylius_payment"/>
            <argument type="service" id="sylius_mollie.payum.action.state_machine.transition.subscription"/>
            <tag name="payum.action" factory="mollie_subscription" alias="payum.action.state_machine.status_recurring_subscription"/>
        </service>

        <service id="sylius_mollie.payum.action.state_machine.applicator.subscription_and_payment_id" class="Sylius\MolliePlugin\StateMachine\Applicator\SubscriptionAndPaymentIdApplicator">
            <argument type="service" id="sylius_mollie.mollie_api_client"/>
            <argument type="service" id="sylius_mollie.payum.action.state_machine.transition.subscription"/>
            <argument type="service" id="sylius_mollie.payum.action.state_machine.transition.payment"/>
            <argument type="service" id="sylius_mollie.payum.action.state_machine.transition.subscription_processing"/>
        </service>
        <service id="Sylius\MolliePlugin\StateMachine\Applicator\SubscriptionAndPaymentIdApplicatorInterface" alias="sylius_mollie.payum.action.state_machine.applicator.subscription_and_payment_id" />

        <service id="sylius_mollie.payum.action.state_machine.applicator.subscription_and_sylius_payment" class="Sylius\MolliePlugin\StateMachine\Applicator\SubscriptionAndSyliusPaymentApplicator">
            <argument type="service" id="sylius_mollie.payum.action.state_machine.transition.subscription"/>
            <argument type="service" id="sylius_mollie.payum.action.state_machine.transition.payment"/>
            <argument type="service" id="sylius_mollie.payum.action.state_machine.transition.subscription_processing"/>
        </service>
        <service id="Sylius\MolliePlugin\StateMachine\Applicator\SubscriptionAndSyliusPaymentApplicatorInterface" alias="sylius_mollie.payum.action.state_machine.applicator.subscription_and_sylius_payment" />

        <service id="sylius_mollie.payum.action.state_machine.transition.payment" class="Sylius\MolliePlugin\StateMachine\Transition\PaymentStateMachineTransition">
            <argument type="service" id="sm.factory"/>
        </service>
        <service id="Sylius\MolliePlugin\StateMachine\Transition\PaymentStateMachineTransitionInterface" alias="sylius_mollie.payum.action.state_machine.transition.payment" />

        <service id="sylius_mollie.payum.action.state_machine.transition.subscription_processing" class="Sylius\MolliePlugin\StateMachine\Transition\ProcessingStateMachineTransition">
            <argument type="service" id="sm.factory"/>
        </service>
        <service id="Sylius\MolliePlugin\StateMachine\Transition\ProcessingStateMachineTransitionInterface" alias="sylius_mollie.payum.action.state_machine.transition.subscription_processing" />

        <service id="sylius_mollie.payum.action.state_machine.transition.subscription" class="Sylius\MolliePlugin\StateMachine\Transition\StateMachineTransition">
            <argument type="service" id="sm.factory"/>
        </service>
        <service id="Sylius\MolliePlugin\StateMachine\Transition\StateMachineTransitionInterface" alias="sylius_mollie.payum.action.state_machine.transition.subscription" />

        <service id="sylius_mollie.payum.action.state_machine.order_set_status" class="Sylius\MolliePlugin\StateMachine\Applicator\MollieOrderStatesApplicator">
            <argument type="service" id="sm.factory"/>
            <argument type="service" id="sylius.repository.order"/>
            <argument type="service" id="sylius_mollie.partial_ship.create_partial_ship_from_mollie"/>
        </service>
        <service id="Sylius\MolliePlugin\StateMachine\Applicator\MollieOrderStatesApplicatorInterface" alias="sylius_mollie.payum.action.state_machine.order_set_status" />
    </services>
</container>
