<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <defaults public="true" />

        <service id="sylius_mollie.listener.shipment_ship" class="Sylius\MolliePlugin\EventListener\ShipmentShipEventListener">
            <argument type="service" id="sylius_mollie.client.mollie_api"/>
            <argument type="service" id="request_stack"/>
            <tag name="kernel.event_listener" event="sylius.shipment.post_ship" method="shipAll"/>
        </service>

        <service id="sylius_mollie.listener.payment_method_logo_upload" class="Sylius\MolliePlugin\EventListener\PaymentMethodUploadLogoListener">
            <argument type="service" id="sylius.manager.gateway_config"/>
            <argument type="service" id="sylius_mollie.uploader.payment_method_logo"/>
            <tag name="kernel.event_listener" event="sylius.payment_method.pre_create" method="uploadLogo"/>
            <tag name="kernel.event_listener" event="sylius.payment_method.pre_update" method="uploadLogo"/>
        </service>

        <service id="sylius_mollie.listener.payment_partial" class="Sylius\MolliePlugin\EventListener\PaymentPartialEventListener">
            <argument type="service" id="sylius_mollie.refund.handler.order_payment_refund"/>
            <argument type="service" id="sylius_mollie.logger.mollie_logger_action"/>
            <tag name="messenger.message_handler" priority="1" />
        </service>

        <service id="sylius_mollie.listener.product_variant_recurring_options" class="Sylius\MolliePlugin\EventListener\ProductVariantRecurringOptionsListener">
            <tag name="kernel.event_listener" event="sylius.menu.admin.product_variant.form" method="addRecurringOptionsMenu" />
        </service>

        <service id="sylius_mollie.listener.refund_payment_generated_auto_complete" class="Sylius\MolliePlugin\EventListener\RefundPaymentGeneratedAutoCompleteListener">
            <argument type="service" id="sylius_refund.repository.refund_payment" />
            <argument type="service" id="sylius_refund.state_resolver.refund_payment_completed_applier"/>
            <argument type="service" id="sylius.repository.payment_method"/>
            <tag name="messenger.message_handler" priority="10" />
        </service>

        <service id="sylius_mollie.listener.checkout_order_colliding_products" class="Sylius\MolliePlugin\EventListener\CheckoutOrderCollidingProductsListener">
            <argument type="service" id="router" />
            <argument type="service" id="translator" />
            <argument type="service" id="request_stack" />
            <tag name="kernel.event_listener" event="sylius.order.initialize_address" method="onUpdate"/>
        </service>
    </services>
</container>
