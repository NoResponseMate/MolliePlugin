<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <defaults public="true" />

        <service id="sylius_mollie.provider.divisor" class="Sylius\MolliePlugin\Provider\DivisorProvider"/>
        <service id="Sylius\MolliePlugin\Provider\DivisorProviderInterface" alias="sylius_mollie.provider.divisor" />

        <service id="sylius_mollie.provider.customer" class="Sylius\MolliePlugin\Provider\CustomerProvider">
            <argument type="service" id="sylius.repository.customer" />
            <argument type="service" id="sylius.factory.customer"/>
        </service>
        <service id="Sylius\MolliePlugin\Provider\CustomerProviderInterface" alias="sylius_mollie.provider.customer" />

        <service id="sylius_mollie.helper.payment_description" class="Sylius\MolliePlugin\Provider\PaymentDescriptionProvider">
            <argument type="service" id="sylius.payment_description_provider"/>
        </service>
        <service id="Sylius\MolliePlugin\Provider\PaymentDescriptionProviderInterface" alias="sylius_mollie.helper.payment_description" />
    </services>
</container>
