<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		   xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
	<services>
		<defaults public="true" />

		<service id="sylius_mollie.processor.subscription_payment" class="Sylius\MolliePlugin\Subscription\Processor\SubscriptionProcessor">
			<argument type="service" id="sylius_mollie.order.subscription_order_cloner"/>
			<argument type="service" id="sylius.custom_factory.payment"/>
			<argument type="service" id="sylius.repository.order"/>
			<argument type="service" id="sylius_mollie.factory.payment_details"/>
			<argument type="service" id="sylius_mollie.repository.mollie_subscription"/>
			<argument type="service" id="payum"/>
			<argument type="service" id="sylius.repository.gateway_config"/>
		</service>
		<service id="Sylius\MolliePlugin\Subscription\Processor\SubscriptionProcessorInterface" alias="sylius_mollie.processor.subscription_payment"/>

		<service id="sylius_mollie.processor.subscription_schedule" class="Sylius\MolliePlugin\Subscription\Processor\SubscriptionScheduleProcessor">
			<argument type="service" id="sylius_mollie.repository.mollie_subscription_schedule"/>
			<argument type="service" id="sylius_mollie.generator.subscription_schedule"/>
		</service>
		<service id="Sylius\MolliePlugin\Subscription\Processor\SubscriptionScheduleProcessorInterface" alias="sylius_mollie.processor.subscription_schedule"/>
	</services>
</container>
