<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="true" />

        <service id="sylius_mollie.purifier.partial_ship.order_shipment" class="Sylius\MolliePlugin\PartialShip\Purifier\OrderShipmentPurifier">
            <argument type="service" id="sylius_mollie.purifier.partial_ship.order_mollie_partial_ship"/>
        </service>
        <service id="Sylius\MolliePlugin\Purifier\PartialShip\OrderShipmentPurifierInterface" alias="sylius_mollie.purifier.partial_ship.order_shipment" />

        <service id="sylius_mollie.purifier.partial_ship.order_mollie_partial_ship" class="Sylius\MolliePlugin\PartialShip\OrderMolliePartialShip">
            <argument type="service" id="sylius_mollie.mollie_api_client"/>
            <argument type="service" id="sylius_mollie.logger.mollie_logger_action"/>
            <argument type="service" id="sylius_mollie.resolver.partial_ship.from_sylius_to_mollie_lines"/>
        </service>
        <service id="Sylius\MolliePlugin\Purifier\PartialShip\OrderMolliePartialShipInterface" alias="sylius_mollie.purifier.partial_ship.order_mollie_partial_ship" />

        <service id="sylius_mollie.purifier.mollie_payment_method" class="Sylius\MolliePlugin\Purifier\MolliePaymentMethodPurifier">
            <argument type="service" id="sylius_mollie.repository.mollie_gateway_config"/>
        </service>
        <service id="Sylius\MolliePlugin\Purifier\MolliePaymentMethodPurifierInterface" alias="sylius_mollie.purifier.mollie_payment_method" />
    </services>
</container>
