<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <defaults public="true" />

        <service id="sylius_mollie.validator.payment_surcharge_type" class="Sylius\MolliePlugin\Validator\Constraints\PaymentSurchargeTypeValidator">
            <tag name="validator.constraint_validator" alias="channels"/>
        </service>

        <service id="sylius_mollie.validator.apple_pay_direct.apple_pay_address" class="Sylius\MolliePlugin\Validator\ApplePayDirect\ApplePayAddressValidator" />

        <service id="sylius_mollie.validator.apple_pay_direct.payment_method_checkout" class="Sylius\MolliePlugin\Validator\Constraints\PaymentMethodCheckoutValidator">
            <argument type="service" id="sylius_mollie.resolver.order.payment_checkout_order"/>
            <argument type="service" id="request_stack"/>
            <argument type="service" id="sylius_mollie.checker.gateway.mollie_gateway_factory"/>
            <tag name="validator.constraint_validator"/>
        </service>

        <service id="sylius_mollie.validator.payment_method_mollie_channel_unique" class="Sylius\MolliePlugin\Validator\Constraints\PaymentMethodMollieChannelUniqueValidator">
            <argument type="service" id="sylius.repository.payment_method"/>
            <argument type="service" id="translator"/>
            <tag name="validator.constraint_validator"/>
        </service>

        <service id="sylius_mollie.validator.refund.refund_units_command" class="Sylius\MolliePlugin\Refund\Validator\RefundUnitsCommandValidator" decorates="Sylius\RefundPlugin\Validator\RefundUnitsCommandValidator">
            <argument type="service" id="Sylius\RefundPlugin\Checker\OrderRefundingAvailabilityChecker"/>
            <argument type="service" id="Sylius\RefundPlugin\Validator\RefundAmountValidator" />
            <argument type="service" id="sylius_mollie.checker.refund.duplicate_refund_the_same_amount"/>
        </service>

        <service id="Sylius\RefundPlugin\Validator\RefundUnitsCommandValidatorInterface" alias="sylius_mollie.validator.refund.refund_units_command"/>
    </services>
</container>
