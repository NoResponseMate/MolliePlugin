<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="true" />

        <service
                id="sylius_mollie.payment_methods_resolver.mollie_payment"
                class="Sylius\MolliePlugin\Payments\MethodResolver\MolliePaymentMethodResolver"
                decorates="sylius.payment_methods_resolver.default"
        >
            <argument type="service" id=".inner" />
            <argument type="service" id="sylius.repository.payment_method" />
            <argument type="service" id="sylius_mollie.resolver.mollie_factory_name" />
            <argument type="service" id="sylius_mollie.payments.method_resolver.mollie_method_filter"/>
            <argument type="service" id="doctrine.orm.entity_manager" />
            <tag name="sylius.payment_method_resolver" type="mollie" label="Mollie" priority="2" />
        </service>
    </services>
</container>
